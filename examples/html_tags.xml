                    <property part-name="imgB2" name="label">nested picture</property>
                    <property part-name="imgB2" name="hint">this is a nested hint</property>
                    <property part-name="imgB2" name="appearance">xf:image</property>
                    <property part-name="imgB2" name="imgSource">button.png</property>
